<%- include("partials/header") %>

<div class="ui main text container">
    <h1>Create new blog</h1>



    <form action="/blogs" method="POST" class="ui form">

        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title">
        </div>

        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image">
        </div>

        <div class="field">
            <label>Description</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" placeholder="Description"></textarea>
        </div>
        <button class="ui inverted green button big" >Submit</button>
    </form>
</div>


<%- include("partials/footer") %>