<%- include("../partials/header") %>

<div class="container">
    <h1 class="text-center">Edit Comment</h1>

    <section id="form">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>/edit?_method=PUT" method="POST">
                    <div class="form-group">
                        <label>Your Comment</label>
                        <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                    </div>
                        <button type="submit" class="btn btn-outline-danger mb-1">Submit</button>
                    <a class="d-inline btn btn-outline-success w-50" href="/campgrounds">Go back!</a>
                </form>
            </div>
        </div>
    </section>
</div>

<%- include("../partials/footer") %>